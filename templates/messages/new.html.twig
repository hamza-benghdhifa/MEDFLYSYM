{% extends 'base.html.twig' %}

{% block title %}New Messages{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                <br>

                <table class="table mx-auto">
                    <tr>
                        <th>{{ form_label(form.ObjetMessage) }}</th>
                        <td>{{ form_widget(form.ObjetMessage) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(form.ContenuMessage) }}</th>
                        <td>{{ form_widget(form.ContenuMessage) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(form.EmailDestinataire) }}</th>
                        <td>{{ form_widget(form.EmailDestinataire) }}</td>
                    </tr>
                </table>

                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
