{% extends 'base.html.twig' %}

{% block title %}Invitations{% endblock %}

{% block body %}
    <div class="container">
        <h1>Invitations</h1>

        <table class="table table-bordered table-striped table-hover">
            <tbody>
                <tr>
                    <th style="width: 150px;">Id</th>
                    <td>{{ invitation.idinvi }}</td>
                </tr>
                <tr>
                    <th>EmailDestinataireinv</th>
                    <td>{{ invitation.EmailDestinataireinv }}</td>
                </tr>
                <tr>
                    <th>Emailinv</th>
                    <td>{{ invitation.Emailinv }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ invitation.Status }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_invitations_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_invitations_edit', {'idinvi': invitation.idinvi}) }}" class="btn btn-primary">Edit</a>
        {{ include('invitations/_delete_form.html.twig') }}
    </div>
{% endblock %}
