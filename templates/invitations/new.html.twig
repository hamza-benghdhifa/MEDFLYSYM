{% extends 'base.html.twig' %}

{% block title %}New Invitations{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                <br>

                <table class="table mx-auto">
                    <tr>
                        <th>{{ form_label(form.EmailDestinataireinv) }}</th>
                        <td>{{ form_widget(form.EmailDestinataireinv) }}</td>
                    </tr>
                </table>

                <button type="submit" class="btn btn-primary btn-block mt-3">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
